<% layout("/layouts/boilerplate") %>
<body>
  <h3>All Places</h3>
  <!-- <form method="GET" action="/placelist/new">
      <button>Create New PlaceList</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      
      <% for(let place of Places){ %>
        <a href="/placelist/<%=place._id%>" class="links">

          <div class="card col">
            <img src="<%=place.image%>" class="card-img-top" alt="..." style="height: 20rem"/>
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%=place.title%></b> <br />
                &#8377; <%=place.price.toLocaleString("en-IN")%> /night
              </p>
            </div>
            
          </div>

        </a>
        <% } %>

    </div>

</body>
