<% layout("/layouts/boilerplate") %>
<body>
  <h3>Create New Placelist</h3>
  <form method="POST" action="/placelist">
    <input name="placelist[title]" placeholder="Enter title" type="text" />
    <br /><br />
    <textarea
      name="placelist[description]"
      placeholder="Enter description"
    ></textarea>
    <br />
    <input name="placelist[image]" placeholder="Enter image link" type="text" />
    <br /><br />
    <input name="placelist[price]" placeholder="Enter price" type="number" />
    <br /><br />
    <input name="placelist[country]" placeholder="Enter country" type="text" />
    <br /><br />
    <input
      name="placelist[location]"
      placeholder="Enter location"
      type="text"
    />
    <br /><br />
    <button>Save</button>
  </form>
</body>
