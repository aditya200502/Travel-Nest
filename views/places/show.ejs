<% layout("/layouts/boilerplate")%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3><%=place.title%></h3>
    </div>
    <div class="card col-6 offset-2">
      <img src="<%=place.image%>" class="card-img-top show-img" alt="..." />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          
          <%=place.description%> <br />
          &#8377; <%=place.price%> /night <br />
          <%=place.country%> <br />
          <%=place.location%> <br />
        </p>
      </div>
    </div>

    <br />

    <div class="btns">
      <a class="btn add-btn col-1 offset-2" href="/placelist/<%=place._id%>/edit">Edit</a>

      <form method="post" action="/placelist/<%=place._id%>?_method=DELETE">
        <button class="btn add-btn offset-4">Delete</button>
      </form>
    </div>
    

    <div class="col-8 offset-2">
      <br/>
      <h4>Leave a Review</h4>
      <form class="mb-3" action="">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating:</label>
          <input type="range" min="1" max="5" id="rating" name="rating-name" class="form-range">
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="reviewcomment" id="comment" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
  </div>
</body>
